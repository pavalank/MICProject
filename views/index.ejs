<%- include('layout') %>
<section>
    <% posts.forEach(post => { %>
        <article>
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
            <small>Posted on <%= post.createdAt.toDateString() %></small>
            <p><a href="/edit/<%= post._id %>">Edit</a> | <a href="/delete/<%= post._id %>">Delete</a></p>
        </article>
    <% }); %>
</section>
